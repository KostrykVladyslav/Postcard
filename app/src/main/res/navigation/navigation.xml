<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.postcard.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_postcardFragment"
            app:destination="@id/postcardFragment"
            app:enterAnim="@anim/fragment_open_enter"/>
    </fragment>

    <fragment
        android:id="@+id/postcardFragment"
        android:name="com.example.postcard.ui.PostcardFragment"
        android:label="fragment_postcard"
        tools:layout="@layout/fragment_postcard" />

</navigation>